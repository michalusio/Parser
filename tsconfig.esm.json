{
  "compilerOptions": {
    "outDir": "dist-esm",
    "rootDir": "src",
    "target": "es2021",
    "module": "es2022",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "declaration": true,
    "strict": true,
    "lib": ["es2021"]
  },
  "include": ["./src/**/*"],
}