{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2019",
    "module": "CommonJs",
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true
  },
  "include": ["./src/**/*"]
}